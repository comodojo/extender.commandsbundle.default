{
    "name": "comodojo/extender.commandsbundle.default",
    "description": "Default commands for extender econtrol",
    "license": "GPL-3.0+",
    "type": "extender-commands-bundle",
    "keywords": [
        "comodojo",
        "extender",
        "commands",
        "bundle"
    ],
    "homepage": "http://extender.comodojo.org",
     "support": {
        "issues": "https://github.com/comodojo/extender.servicebundle.default/issues"
    },
    "authors": [
        {
            "name": "Marco Giovinazzi",
            "email": "info@comodojo.org"
        }
    ],
    "extra": {
        "comodojo-commands-register": {
            "check": {
                "description": "Perform multiple checks on system configuration",
                "aliases": [],
                "options": {},
                "arguments": {}
            },
            "install": {
                "description": "Perform first installation task",
                "aliases": ["inst","in"],
                "options": {
                    "force": {
                        "short_name": "-f",
                        "long_name": "--force",
                        "action": "StoreTrue",
                        "description": "Force installation re-creating database"
                    },
                    "clean": {
                        "short_name": "-c",
                        "long_name": "--clean",
                        "action": "StoreTrue",
                        "description": "Drain database tables only"
                    }
                },
                "arguments": {}
            },
            "tasks": {
                "description": "List available tasks",
                "aliases": ["task","tk"],
                "options": {
                    "extensive": {
                        "short_name": "-e",
                        "long_name": "--extensive",
                        "action": "StoreTrue",
                        "description": "Show task target (full path)"
                    }
                },
                "arguments": {}
            },
            "execute": {
                "description": "Execute a tasks without invoking extender",
                "aliases": ["exe","exec"],
                "options": {},
                "arguments": {
                    "task": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "Task to execute"
                    }
                }
            },
            "jobs": {
                "description": "List scheduled jobs",
                "aliases": ["job"],
                "options": {
                    "extensive": {
                        "short_name": "-e",
                        "long_name": "--extensive",
                        "action": "StoreTrue",
                        "description": "Show extensive informations"
                    }
                },
                "arguments": {}
            },
            "add": {
                "description": "Add a job to scheduler",
                "aliases": [],
                "options": {
                    "enable": {
                        "short_name": "-e",
                        "long_name": "--enable",
                        "action": "StoreTrue",
                        "description": "Enable job too"
                    }
                },
                "arguments": {
                    "expression": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "Cron expression"
                    },
                    "name": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "Job name"
                    },
                    "task": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "Task to execute"
                    },
                    "description": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "A brief job's description"
                    },
                    "parameters": {
                        "choices": {},
                        "multiple": false,
                        "optional": true,
                        "description": "A comma separated, not spaced, [option]=[value] parameters' list"
                    }
                }
            },
            "del": {
                "description": "Delete a job",
                "aliases": [],
                "options": {},
                "arguments": {
                    "name": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "Job name"
                    }
                }
            },
            "enable": {
                "description": "Enable a job",
                "aliases": ["ena"],
                "options": {},
                "arguments": {
                    "name": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "Job name"
                    }
                }
            },
            "disable": {
                "description": "Disable a job",
                "aliases": ["dis"],
                "options": {},
                "arguments": {
                    "name": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "Job name"
                    }
                }
            },
            "worklogs": {
                "description": "Display worklogs table",
                "aliases": ["wrks"],
                "options": {},
                "arguments": {
                    "howmany": {
                        "choices": {},
                        "multiple": false,
                        "optional": true,
                        "description": "Number of worklogs to fetch"
                    },
                    "from": {
                        "choices": {},
                        "multiple": false,
                        "optional": true,
                        "description": "Worklog (num) to start from"
                    }
                }
            },
            "worklog": {
                "description": "Display detailed information about a worklog",
                "aliases": ["wrk"],
                "options": {},
                "arguments": {
                    "id": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "ID of worklog to retrieve"
                    }
                }
            },
            "status": {
                "description": "Get extender status (if in daemon mode)",
                "aliases": ["st"],
                "options": {},
                "arguments": {}
            },
            "pause": {
                "description": "Pause extender (if running and in daemon mode)",
                "aliases": ["pau"],
                "options": {},
                "arguments": {}
            },
            "resume": {
                "description": "Resume extender (if paused and in daemon mode)",
                "aliases": ["st"],
                "options": {},
                "arguments": {}
            },
            "export": {
                "description": "Export whole job list to file",
                "aliases": ["exp"],
                "options": {},
                "arguments": {
                    "destination": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "Destination file"
                    }
                }
            },
            "import": {
                "description": "Import job list from file",
                "aliases": ["imp"],
                "options": {
                    "clean": {
                        "short_name": "-c",
                        "long_name": "--clean",
                        "action": "StoreTrue",
                        "description": "Delete existent jobs first"
                    }
                },
                "arguments": {
                    "source": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "Source file"
                    }
                }
            }
        }
    },
    "autoload": {
        "psr-4": {
             "Comodojo\\Extender\\Command\\": "commands"
         }
    },
    "require": {
        "comodojo/extender.framework": "dev-master"
    }
}