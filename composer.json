{
    "name": "comodojo/extender.servicebundle.default",
    "description": "Default commands for extender econtrol",
    "license": "GPL-3.0+",
    "type": "extender-commands-bundle",
    "keywords": [
        "comodojo",
        "extender",
        "commands",
        "bundle"
    ],
    "homepage": "http://extender.comodojo.org",
     "support": {
        "issues": "https://github.com/comodojo/extender.servicebundle.default/issues"
    },
    "authors": [
        {
            "name": "Marco Giovinazzi",
            "email": "info@comodojo.org"
        }
    ],
    "extra": {
        "comodojo-commands-register": {
            "install": {
                "description": "Perform first installation task",
                "aliases": ["inst","in"],
                "options": {
                    "force": {
                        "short_name": "-f",
                        "long_name": "--force",
                        "action": "StoreTrue",
                        "description": "Force installation re-creating database"
                    },
                    "clean": {
                        "short_name": "-c",
                        "long_name": "--clean",
                        "action": "StoreTrue",
                        "description": "Drain database tables only"
                    }
                },
                "arguments": {}
            },
            "tasks": {
                "description": "List available tasks",
                "aliases": ["task","tk"],
                "options": {},
                "arguments": {}
            },
            "execute": {
                "description": "Execute a tasks without invoking extender",
                "aliases": ["ex","exec"],
                "options": {},
                "arguments": {
                    "task": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "Task to execute"
                    }
                }
            },
            "jobs": {
                "description": "List scheduled jobs",
                "aliases": ["job","jb"],
                "options": {},
                "arguments": {}
            },
            "add": {
                "description": "Add a job to scheduler",
                "aliases": ["ad"],
                "options": {
                    "enable": {
                        "short_name": "-e",
                        "long_name": "--enable",
                        "action": "StoreTrue",
                        "description": "Enable job too"
                    }
                },
                "arguments": {
                    "expression": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "Cron expression"
                    },
                    "name": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "Job name"
                    },
                    "task": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "Task to execute"
                    },
                    "description": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "A brief job's description"
                    },
                    "parameters": {
                        "choices": {},
                        "multiple": false,
                        "optional": true,
                        "description": "A comma separated, not spaced, [option]=[value] parameters' list"
                    }
                }
            },
            "del": {
                "description": "Delete a job",
                "aliases": ["de"],
                "options": {},
                "arguments": {
                    "name": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "Job name"
                    }
                }
            },
            "enable": {
                "description": "Enable a job",
                "aliases": ["en"],
                "options": {},
                "arguments": {
                    "name": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "Job name"
                    }
                }
            },
            "disable": {
                "description": "Disable a job",
                "aliases": ["di"],
                "options": {},
                "arguments": {
                    "name": {
                        "choices": {},
                        "multiple": false,
                        "optional": false,
                        "description": "Job name"
                    }
                }
            }
        }
    },
    "autoload": {
        "psr-4": {
             "Comodojo\\Extender\\Shell\\Commands\\": "commands"
         }
    },
    "require": {
        "comodojo/extender.framework": "dev-master"
    }
}